<%- include('partials/_header.ejs') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation.ejs') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')" >
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <hr/>
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <h2 class="subheading"><%= post.description %></h2>
            <span class="meta">Posted by
              <a href="#"><%= post.author %></a>
              <%= post.dateCreated %></span>
              <div style="display: flex; justify-content: space-between; margin-top: 40px;">
                
                <button> <a href="/posts/edit/<%= post._id %>"">Update Post</a> </button>
                <button><a href="/posts/<%= post._id %>?_method=DELETE" onclick="return confirm('ARE YOU SURE?')">Delete Post</a></button>
              </div>
          </div>
        </div>
      </div>
    </div>
  </header>
  <!-- Post Content -->
  
  <hr>

  <!-- Footer -->
  <%- include('partials/_footer.ejs') -%>
  <!-- Bootstrap core JavaScript -->

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
